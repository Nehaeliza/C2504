// while loop for salary sum

class SalarySum
{
    static void Main()
    {
        ReadAndFindSumOfDoctorsSalariesTillZero();
    }

    static void ReadAndFindSumOfDoctorsSalariesTillZero()
    {
        int sum = 0;
        int salary;

        while (true)
        {
            Console.WriteLine("Enter the  salary (enter 0 to stop): ");
            string input = Console.ReadLine();

            // Validate input
            if (!int.TryParse(input, out salary))
            {
                Console.WriteLine("Input is not a valid number. Please enter a valid salary.");
                continue;
            }

            // Check if salary is zero to exit the loop
            if (salary == 0)
            {
                break;
            }
            
            // Check if salary is negative
            if (salary < 0)
            {
                Console.WriteLine("Input valid salary (positive number only).");
                continue;
            }

            // Add valid salary to sum
            sum += salary;
        }

        Console.WriteLine($"Total sum of valid salaries: {sum}");
    }
}

//Enter the  salary (enter 0 to stop): 36
//Enter the  salary (enter 0 to stop): 24
//Enter the  salary (enter 0 to stop): 0
//Total sum of valid salaries: 59

//Enter the  salary (enter 0 to stop): 36000
//Enter the  salary (enter 0 to stop): 24000
//Enter the  salary (enter 0 to stop): 0
//Total sum of valid salaries: 59000

//Enter the  salary (enter 0 to stop): 3000
//Enter the  salary (enter 0 to stop): 2000
//Enter the  salary (enter 0 to stop): 0
//Total sum of valid salaries: 5000


